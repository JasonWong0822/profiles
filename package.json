{
  "name": "profiles",
  "version": "0.0.1",
  "description": "Web app to display useful information about GP practices Pharmacies",
  "main": "server.js",
  "scripts": {
    "start": "node app.js",
    "lint": "eslint --ext .js,.json .",
    "test": "NODE_ENV=test mocha --recursive test",
    "istanbul": "NODE_ENV=test istanbul",
    "generate-coverage": "npm run istanbul -- cover _mocha -- --recursive",
    "check-coverage": "istanbul check-coverage --config .istanbul.yml",
    "upload-coverage-coveralls": "cat ./coverage/lcov.info | coveralls",
    "watch-dev": "nodemon app.js | ./node_modules/.bin/bunyan",
    "watch-lint": "esw --watch .",
    "watch-test": "npm run test -- --watch --reporter min",
    "git-hook": "npm run lint && npm run generate-coverage && npm run check-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhsuk/profiles.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nhsuk/profiles/issues"
  },
  "homepage": "https://github.com/nhsuk/profiles#readme",
  "dependencies": {
    "body-parser": "^1.16.1",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.14.1",
    "helmet": "^3.4.0",
    "nhsuk-bunyan-logger": "nhsuk/bunyan-logger#1.0.4",
    "normalize.css": "^5.0.0",
    "nunjucks": "^2.5.2",
    "object.values": "https://registry.npmjs.org/object.values/-/object.values-1.0.4.tgz",
    "request": "^2.79.0",
    "require-environment-variables": "https://registry.npmjs.org/require-environment-variables/-/require-environment-variables-1.1.2.tgz",
    "snyk": "https://registry.npmjs.org/snyk/-/snyk-1.24.6.tgz"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^2.0.0",
    "eslint-plugin-mocha": "^4.3.0",
    "eslint-plugin-react": "^6.0.0",
    "eslint-watch": "^2.1.11",
    "istanbul": "^0.4.3",
    "mocha": "^3.0.2",
    "nodemon": "^1.11.0"
  }
}
